{
  "name": "lukas-rydzynski-website",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://mansi1.github.io/lukas-rydzynski-website",
  "scripts": {
    "prepare": "husky install",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "prebuild": "mkdir build/ && cp -rf src/assets/i18n build/i18n",
    "test": "react-scripts test --coverage --watchAll=false",
    "test:watch": "yarn test --watchAll=true",
    "check:i18n": "node translation.js",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@fontsource/caveat": "^4.5.8",
    "@fontsource/italiana": "^4.5.10",
    "@fontsource/raleway": "^4.5.10",
    "@fontsource/roboto": "^4.5.1",
    "@milkscout/react": "^1.0.35",
    "@mui-extra/icons": "^0.0.26",
    "@mui/material": "^5.2.3",
    "@mui/styles": "^5.2.3",
    "@mui/system": "^5.2.3",
    "custom-event-polyfill": "^1.0.7",
    "i18next": "^21.6.6",
    "i18next-browser-languagedetector": "^6.1.2",
    "react": "^17.0.2",
    "react-app-polyfill": "^3.0.0",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.3",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^5.0.1",
    "typescript": "^4.5.4",
    "web-vitals": "^2.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.19",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "body-parser": "^1.19.1",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "cors": "^2.8.5",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "express": "^4.17.2",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "json-stable-stringify": "^1.0.1",
    "prettier": "^2.5.1",
    "puppeteer": "^17.1.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 15,
        "functions": 15,
        "lines": 20,
        "statements": 20
      }
    }
  },
  "resolutions": {
    "mini-css-extract-plugin": "2.4.5"
  }
}
